{
  "permissions": {
    "allow": [
      "Bash(npm create:*)",
      "Bash(mkdir:*)",
      "Bash(npm install:*)",
      "Bash(npx tailwindcss init:*)",
      "Bash(touch:*)",
      "Bash(npm run dev:*)",
      "Bash(npx create-react-app:*)",
      "Bash(npx create-vite:*)",
      "Bash(rm:*)",
      "Bash(ls:*)",
      "Bash(npm run build:*)",
      "Bash(find:*)",
      "Bash(firebase --version)",
      "Bash(firebase deploy:*)",
      "Bash(git reset:*)",
      "Bash(git add:*)",
      "Bash(git push:*)",
      "Bash(cp:*)",
      "Bash(git commit:*)",
      "Bash(npm outdated)",
      "Bash(grep:*)",
      "Bash(taskkill:*)",
      "Bash(timeout 10 npm run dev)",
      "Bash(npm run lint)",
      "Bash(npx depcheck:*)"
    ],
    "deny": []
  },
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Write|Edit|MultiEdit",
        "hooks": [
          {
            "type": "command",
            "command": "node $CLAUDE_PROJECT_DIR/.claude/hooks/check-dark-mode.js"
          }
        ]
      }
      
    ]
  }
}